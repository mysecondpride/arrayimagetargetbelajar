  </head>
  <body>
    <div>
      <% data.forEach(item => { %> <% const produk1 = item.Produk1; %> <% if
      (produk1.length > 0) { %>

      <p>produk:<%= produk1[0].NamaProduk1 %></p>
      <p>harga: <%= produk1[0].Harga1 %></p>
      <p>stok: <%= produk1[0].Stok1 %></p>
      <p>Keterangan: <%= produk1[0].Keterangan1 %></p>

      <% } %> <% produk1.forEach(element1 => { %>
      <form
        action="/delete-item1/<%= item._id %>/<%= element1._id %>?_method=DELETE"
        method="POST"
      >
        <input type="submit" value="delete" />
      </form>

      <% }) %> <% }) %>
